<div class='page-header'>
  <h1>Suchergebnisse <small><%= @total %> Treffer </small></h1>
</div>

<div class='row entries-container' data-page-nr='1' data-query='<%=@query%>' data-offset='<%= @offset %>'>
  <div class='span12 entries'>
    <% @entries.each do |entry| %>
      <% entry["api_host"] = settings.api_host %>
      <%= render_entry entry %>
    <% end %>
  </div>
</div>
<div class='row next-page-div'>
  <div class='span12'>
    <% if @more %>
        <a class='btn next_page' href='<%= @next_page%>' >Weitere Ergebnisse</a>
    <% end %>
  </div>
</div>
